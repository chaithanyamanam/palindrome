#include <string.h>
int main()
{
    char ch[100];  
    int i,n,c=0;
    printf("Enter  the string : ");
    gets(ch);
    n=strlen(ch);
    for(i=0;i<n/2;i++)  
    {
    	if(ch[i]==ch[n-i-1])
    	c++;
    }
 	if(c==i)
 	    printf("string is palindrome");
    else
        printf("string is not palindrome");
    return 0;
}
